<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="TransaccionReport" pageWidth="595" pageHeight="842" columnWidth="555" leftMargin="20" rightMargin="20" topMargin="20" bottomMargin="20">

    <field name="nombre" class="java.lang.String"/>
    <field name="monto" class="java.math.BigDecimal"/>
    <field name="fechaTransaccion" class="java.time.LocalDate"/>
    <field name="descripcion" class="java.lang.String"/>

    <title>
        <band height="80">
            <staticText>
                <reportElement x="0" y="20" width="555" height="30"/>
                <textElement textAlignment="Center">
                    <font size="22" isBold="true"/>
                </textElement>
                <text><![CDATA[Comprobante de Transacción]]></text>
            </staticText>
            <line>
                <reportElement x="0" y="60" width="555" height="1"/>
            </line>
        </band>
    </title>

    <detail>
        <band height="200">
            <staticText>
                <reportElement x="20" y="20" width="100" height="20"/>
                <textElement><font isBold="true"/></textElement>
                <text><![CDATA[Nombre:]]></text>
            </staticText>
            <textField>
                <reportElement x="130" y="20" width="300" height="20"/>
                <textFieldExpression><![CDATA[$F{nombre}]]></textFieldExpression>
            </textField>

            <staticText>
                <reportElement x="20" y="50" width="100" height="20"/>
                <textElement><font isBold="true"/></textElement>
                <text><![CDATA[Monto:]]></text>
            </staticText>
            <textField pattern="¤#,##0.00">
                <reportElement x="130" y="50" width="300" height="20"/>
                <textFieldExpression><![CDATA[$F{monto}]]></textFieldExpression>
            </textField>

            <staticText>
                <reportElement x="20" y="80" width="100" height="20"/>
                <textElement><font isBold="true"/></textElement>
                <text><![CDATA[Fecha:]]></text>
            </staticText>
            <textField>
                <reportElement x="130" y="80" width="300" height="20"/>
                <textFieldExpression><![CDATA[$F{fechaTransaccion}]]></textFieldExpression>
            </textField>

            <staticText>
                <reportElement x="20" y="110" width="100" height="20"/>
                <textElement><font isBold="true"/></textElement>
                <text><![CDATA[Descripción:]]></text>
            </staticText>
            <textField textAdjust="StretchHeight">
                <reportElement x="130" y="110" width="400" height="60"/>
                <textFieldExpression><![CDATA[$F{descripcion}]]></textFieldExpression>
            </textField>
        </band>
    </detail>
</jasperReport>