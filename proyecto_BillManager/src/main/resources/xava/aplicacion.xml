<?xml version = "1.0" encoding = "ISO-8859-1"?>

<!DOCTYPE aplicacion SYSTEM "dtds/aplicacion.dtd">

<aplicacion nombre="proyecto_BillManager">

    <!-- Controlador por defecto para TODOS los módulos generados automáticamente -->
    <modulo-defecto>
        <controlador nombre="Typical"/>
    </modulo-defecto>

    <!-- Módulo explícito para cada entidad importante -->

    <modulo nombre="Usuarios">
        <modelo nombre="Usuario"/>
        <controlador nombre="Typical"/>
    </modulo>

    <modulo nombre="Organizaciones">
        <modelo nombre="Organizacion"/>
        <controlador nombre="Typical"/>
    </modulo>

    <modulo nombre="Cuentas">
        <modelo nombre="Cuenta"/>
        <controlador nombre="Typical"/>
    </modulo>

    <modulo nombre="Categorias">
        <modelo nombre="Categoria"/>
        <controlador nombre="Typical"/>
    </modulo>

    <modulo nombre="Metas">
        <modelo nombre="Meta"/>
        <controlador nombre="Typical"/>
    </modulo>

    <modulo nombre="Transacciones">
        <modelo nombre="Transaccion"/>
        <controlador nombre="Typical"/>
    </modulo>

    <modulo nombre="Reportes">
        <modelo nombre="Reporte"/>
        <controlador nombre="Typical"/>
    </modulo>

    <!-- Aquí podrías añadir luego un Dashboard, por ejemplo:
    <modulo nombre="DashboardFinanzas">
        <modelo nombre="FinanzasDashboard"/>
        <controlador nombre="Typical"/>
    </modulo>
    -->

</aplicacion>
