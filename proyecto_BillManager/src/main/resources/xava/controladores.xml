<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE controladores SYSTEM "dtds/controladores.dtd">

<controladores>

    <controlador nombre="SeguridadLectura">
        <hereda-de controlador="Typical"/>

        <accion nombre="searchByViewKey"
                clase="ni.edu.uamv.proyecto_BillManager.acciones.BloquearAjenoAction"
                atajo-de-teclado="F8"
                icono="magnify"/>

        <accion nombre="viewDetail"
                clase="ni.edu.uamv.proyecto_BillManager.acciones.IrADetalleAction"
                oculta="true"
                atajo-de-teclado="F4"/>
    </controlador>

    <controlador nombre="Meta">
        <hereda-de controlador="SeguridadLectura"/>
    </controlador>

    <controlador nombre="Presupuesto">
        <hereda-de controlador="SeguridadLectura"/>
    </controlador>

    <controlador nombre="Transaccion">
        <hereda-de controlador="SeguridadLectura"/>
        <accion nombre="imprimirReporte"
                icono="printer"
                modo="detail"
                clase="ni.edu.uamv.proyecto_BillManager.acciones.ImprimirTransaccionAction"/>
    </controlador>

    <controlador nombre="SignIn">
        <accion nombre="signIn"
                clase="ni.edu.uamv.proyecto_BillManager.acciones.SignInAction"
                atajo-de-teclado="ENTER"/>
    </controlador>

</controladores>